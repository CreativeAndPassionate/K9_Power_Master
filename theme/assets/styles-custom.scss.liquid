.product {
  .product-icons {
    margin-top: 15px;
    text-align: center;
    @media (min-width: 798px) {
      max-width: 400px;

    }
  }
  .block-title {
    font-weight: bold;
    font-size: 30px;
    text-transform: none;
  }
  .block-subtitle {
    font-weight: 600;
    font-size: 22px;
    margin-bottom: 20px;
  }
  .block-image {
    text-align: center;
  }
  @media (max-width: 480px) {
    .purchase-details__buttons {
      margin-top: 20px;
    }
    .add_to_cart.action_button {
      height: 48px;
      font-size: 16px;
      letter-spacing: 2px;
      font-weight: 700;
    }
  }
}

.product-section {
  margin-top: 45px;
  @media (max-width: 798px) {
    margin-top: 0;
  }
  .section-header {
    text-align: center;
    padding-bottom: 20px;
    border-bottom: 1px solid #aaaaaa;
    margin-bottom: 30px;
    @media (max-width: 798px) {
      padding-bottom: 10px;
      margin-bottom: 15px;
    }
    .title {
      font-weight: 700;
      font-size: 30px;
      text-transform: none;
      margin: 0;
    }
    .subtitle {
      font-weight: 600;
      font-size: 22px;
      text-transform: none;
      margin-top: 5px;
    }
  }
  .grid-carousel {
    .item {
      margin: 30px 0;
      text-align: center;
      padding: 0 30px;
      .item-title {
        font-weight: 600;
        font-size: 22px;
        text-transform: none;
      }
      .item-image {
        margin-bottom: 20px;
        // text-align: left;
        img {
          // max-height: 100%;
          // max-width: 140px;
          max-height: 140px;
          margin-left: auto;
          margin-right: auto
        }
      }
      // .item-content {
      //   padding: 0 30px;
      // }
    }
    @media (min-width: 992px) {
      .item.horizontal {
        display: flex;
        align-items: center;
        text-align: left;
        padding: 0;
        .item-image {
          flex: 1;
          margin-bottom: 0;
        }
        .item-content {
          flex: 3;
          padding: 0 30px;
        }
      }
    }

    /* external css: flickity.css */
    /* flickity on by default */
    .carousel:after {
      content: 'flickity';
      display: none;
    }
    @media screen and ( min-width: 768px ) {
      /* disable Flickity for large devices */
      .carousel:after {
        content: '';
      }
    }
    // .carousel-cell {
    //   width: 49%;
    //   display: inline-block;
    //   vertical-align: top;
    //   &.one-third {
    //     width: 33%;
    //   }
    // }
    /* no margin bottom when Flickity enabled */
    .flickity-enabled .carousel-cell {
      width: 100%;
    }

  }
  &.how-to-use {
    .item-title {
      min-height: 60px;
    }
    .item-content {
      // text-align: left;
    }
  }
  &.faq-section {
    .faqAccordion>dt>button {
      color: #27282c;
      font-weight: 600;
      border-bottom: none;
      padding: 20px;
      padding-right: 40px;
    }
    .faqAccordion>dd {
      padding: 20px;
      margin-left: 0 !important;
    }
    .faqAccordion {
      max-width: 750px;
      margin: auto;
    }
    .faqAccordion>dt>button::after {
      left: unset;
      right: 20px;
    }
  }
  &.comparison {
    margin-bottom: 30px;
    @media (max-width: 798px) {
      margin-bottom: 0;
    }
    .item {
      text-align: center;
      .item-image {
        // max-height: 200px;
        display: flex;
        align-items: flex-end;
        justify-content: center;
        height: 240px;
        img {
          max-height: 100%;
          max-width: 230px;
        }
      }
    }
    
    .item-text {
      font-weight: 600;
      font-size: 20px;
      color: #47a62f;
    }
  }
  &.benefits {
    @media (max-width: 798px) {
      .block-image {
        margin-bottom: 20px;
      } 
    }
    @media (min-width: 798px) {
      .block-image {
        padding-right: 30px;
      } 
    }
    .block-title {
      margin-top: 0;
    }
  }
}

